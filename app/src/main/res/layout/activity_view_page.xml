<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/border_logo"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/bits_logo" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="32dp"
                    android:text="Bits Academy"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imageView6"
                    app:layout_constraintTop_toTopOf="@+id/imageView6" />

                <ImageView
                    android:id="@+id/imageViewProfile"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    android:layout_marginEnd="32dp"
                    android:onClick="show_profile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/imageView6"
                    app:srcCompat="@drawable/user"
                    tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cat_background">

                        <ImageView
                            android:id="@+id/imageViewHotel"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/course" />

                        <TextView
                            android:id="@+id/textViewHotel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Resumption"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="20dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cat_background">

                        <ImageView
                            android:id="@+id/imageViewHome"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/offer" />

                        <TextView
                            android:id="@+id/textViewHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Offers"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cat_background"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="8dp"
                        >

                        <ImageView
                            android:id="@+id/imageView10"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/exam" />

                        <TextView
                            android:id="@+id/textViewHouse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Exams "
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="70dp"
                        android:layout_weight="0.5"
                        android:background="@drawable/cat_background"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="20dp"
                        >

                        <ImageView
                            android:id="@+id/imageViewH"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:srcCompat="@drawable/support" />

                        <TextView
                            android:id="@+id/textView15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="Sponsors"
                            android:textColor="#000000"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                <TextView
                    android:id="@+id/textViewPopuler"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Populer"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/textViewSeeAll"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="#fe6900"
                    android:textStyle="bold"
                    android:text="See All" />
            </LinearLayout>

            <!-- Start Section Populer -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!-- Start Card One -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/course_apps" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Andriod Apps"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- End Card One -->

                        <!-- Start Card Two -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/coruse_websecurity"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Web Security"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- End Card Two -->

                        <!-- Start Card Three -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/coruse_js"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="JavaScript"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- End Card Three -->

                        <!-- Start Card Four -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/coruse_java"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Java"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- End Card Four -->

                        <!-- Start Card Five -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="200dp"
                            android:layout_height="150dp"
                            android:layout_margin="10dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center_horizontal">

                                <ImageView
                                    android:layout_width="150dp"
                                    android:layout_height="120dp"
                                    android:src="@drawable/course_asp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ASP.net"
                                    android:textSize="18sp"
                                    android:textStyle="bold"/>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <!-- End Card Five -->

                    </LinearLayout>

                </HorizontalScrollView>

            </LinearLayout>
           <!-- <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/viewPopular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="horizontal"
                android:clipToPadding="false"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                />-->

            <!-- Title Section Two -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="35dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                >

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="New"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="viewEnd"
                    android:textColor="#fe6900"
                    android:textStyle="bold"
                    android:text="See All" />
            </LinearLayout>

            <!-- Start Section New -->
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

              <HorizontalScrollView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="horizontal">
                    <!-- Start Card One -->
                      <androidx.cardview.widget.CardView
                          android:layout_width="200dp"
                          android:layout_height="150dp"
                          android:layout_margin="10dp"
                          app:cardCornerRadius="10dp"
                          app:cardElevation="10dp">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">

                              <ImageView
                                  android:layout_width="150dp"
                                  android:layout_height="120dp"
                                  android:src="@drawable/course_apps" />

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Andriod Apps"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>
                          </LinearLayout>

                      </androidx.cardview.widget.CardView>
                      <!-- End Card One -->

                      <!-- Start Card Two -->
                      <androidx.cardview.widget.CardView
                          android:layout_width="200dp"
                          android:layout_height="150dp"
                          android:layout_margin="10dp"
                          app:cardCornerRadius="10dp"
                          app:cardElevation="10dp">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">

                              <ImageView
                                  android:layout_width="150dp"
                                  android:layout_height="120dp"
                                  android:src="@drawable/coruse_websecurity" />

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Web Security"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>
                          </LinearLayout>

                      </androidx.cardview.widget.CardView>
                      <!-- End Card Two -->

                      <!-- Start Card Three -->
                      <androidx.cardview.widget.CardView
                          android:layout_width="200dp"
                          android:layout_height="150dp"
                          android:layout_margin="10dp"
                          app:cardCornerRadius="10dp"
                          app:cardElevation="10dp">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">

                              <ImageView
                                  android:layout_width="150dp"
                                  android:layout_height="120dp"
                                  android:src="@drawable/coruse_js"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="JavaScript"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>
                          </LinearLayout>

                      </androidx.cardview.widget.CardView>
                      <!-- End Card Three -->

                      <!-- Start Card Four -->
                      <androidx.cardview.widget.CardView
                          android:layout_width="200dp"
                          android:layout_height="150dp"
                          android:layout_margin="10dp"
                          app:cardCornerRadius="10dp"
                          app:cardElevation="10dp">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">

                              <ImageView
                                  android:layout_width="150dp"
                                  android:layout_height="120dp"
                                  android:src="@drawable/coruse_java"/>

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="Java"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>
                          </LinearLayout>

                      </androidx.cardview.widget.CardView>
                      <!-- End Card Four -->

                      <!-- Start Card Five -->
                      <androidx.cardview.widget.CardView
                          android:layout_width="200dp"
                          android:layout_height="150dp"
                          android:layout_margin="10dp"
                          app:cardCornerRadius="10dp"
                          app:cardElevation="10dp">

                          <LinearLayout
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:orientation="vertical"
                              android:gravity="center_horizontal">

                              <ImageView
                                  android:layout_width="150dp"
                                  android:layout_height="120dp"
                                  android:src="@drawable/course_asp" />

                              <TextView
                                  android:layout_width="wrap_content"
                                  android:layout_height="wrap_content"
                                  android:text="ASP.net"
                                  android:textSize="18sp"
                                  android:textStyle="bold"/>
                          </LinearLayout>

                      </androidx.cardview.widget.CardView>
                      <!-- End Card Five -->

                  </LinearLayout>

              </HorizontalScrollView>

          </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>